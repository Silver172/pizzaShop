@model PizzaShop.DataAccess.ViewModels.OrderAppKOTViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_OrderAppLayout";
    var PageIndex = Model.Pagination.PageIndex;
    var TotalPage = Model.Pagination.TotalPage;
}

<section>
    <div class="col-12 col-sm-4">
        <h2 class="textBlue ">KOT</h2>
    </div>
    <nav class="bg-light p-2 shadow">
        <div class="nav nav-underline" id="nav-tab" role="tablist">
            <button class="nav-link active kot-tab-link pe-1" id="All" data-bs-toggle="tab" type="button" role="tab"
                aria-controls="nav-category-1" aria-selected="true">All
            </button>
            @foreach (var c in Model.CategoryList)
            {
                <button class="nav-link kot-tab-link pe-2 kot-category" data-bs-toggle="tab" type="button" role="tab"
                    aria-controls="nav-category-2" aria-selected="false" data-id="@c.Id" data-name="@c.Name">
                    @c.Name
                </button>
            }
        </div>
    </nav>

    <section class="shadow bg-white mt-3 p-3">
        <div class="row">
            <h2 class="text-center text-sm-start col-sm-3 text-start textBlue categoryName">
                All
            </h2>
            <div class="text-center text-sm-end col-sm-9 text-end mb-2 mb-sm-0">
                <button class="btn btn-primary" type="submit" id="inProgress">
                    In Progress
                </button>
                <button class="btn btn-outline-primary" id="ready" type="button">Ready</button>
                <button class="btn btn-outline-primary me-1" style="padding: 6px;" name="PageIndex" id="PreviousKot">
                    <i class="fa-solid fa-less-than fa-sm"></i>
                </button>
                <button class="btn btn-outline-primary me-1" style="padding: 6px;" name="PageIndex" id="NextKot">
                    <i class="fa-solid fa-greater-than fa-sm"></i>
                </button>
            </div>
        </div>

        <div class="d-flex flex-wrap gap-3" id="kotListContainer">
            @Html.Partial("_KOT", Model)
        </div>
    </section>
</section>

<script src="~/js/KOT.js" asp-append-version="true"></script>