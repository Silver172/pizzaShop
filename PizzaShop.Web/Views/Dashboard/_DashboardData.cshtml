@model PizzaShop.DataAccess.ViewModels.DashboardViewModel;

<!-- Stats Cards -->
<div class="container-fluid">
    <div class="row g-3">
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <div class="icon-container icon-sales"><img src="~/images/icons/total-sales.svg"></div>
                <h3 class="card-value">$@Model?.TotalSales</h3>
                <p class="card-title">Total Sales</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <div class="icon-container icon-orders"><img src="~/images/icons/total-orders.svg"></div>
                <h3 class="card-value">@Model?.TotalOrders</h3>
                <p class="card-title">Total Orders</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <div class="icon-container icon-value"><img src="~/images/icons/order-value.svg"></div>
                <h3 class="card-value">@Model?.AverageOrderValue</h3>
                <p class="card-title">Avg. Order Value</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <div class="icon-container icon-waiting"><img src="~/images/icons/waiting-time.svg"></div>
                <h3 class="card-value">@Model?.AverageWaitingTime mins</h3>
                <p class="card-title">Avg. Waiting Time</p>
            </div>
        </div>
    </div>
</div>

<!-- Graphs -->
<div class="container-fluid mt-4">
    <div class="row g-3">
        <div class="col-md-6">
            <div class="dashboard-card">
                <h4 class="card-heading">Revenue</h4>
                <canvas id="revenueChart" style="width:100%;max-width:700px"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card">
                <h4 class="card-heading">Customer Growth</h4>
                <canvas id="customerGrowthChart" style="width:100%;max-width:700px"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-4">
    <div class="row g-3">
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <h4 class="card-heading">Top Selling Items</h4>
                <table class="item-table">
                    @for (var i = 0; i < @Model?.TopSellingItem.Count(); i++)
                    {
                        <tr>
                            <td>#@(i + 1)</td>
                            <td><img src="~/images/@(Model?.TopSellingItem[i].ItemImage != null ? Model.TopSellingItem[i].ItemImage : "dining-menu.png")"
                                    alt="ItemImage" class="item-img">
                            </td>
                            <td>
                                <p class="item-name">@Model?.TopSellingItem[i].Name</p>
                                <span class="order-count"><i class="fa-solid fa-caret-up"></i>
                                    @Model?.TopSellingItem[i].OrderCount Order</span>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <h4 class="card-heading">Least Selling Items</h4>
                <table class="item-table">
                    @for (var i = 0; i < @Model?.LeastSellingItem.Count(); i++)
                    {
                        <tr>
                            <td>#@(i + 1)</td>
                            <td><img src="~/images/@(Model?.LeastSellingItem[i].ItemImage != null ? Model.LeastSellingItem[i].ItemImage : "dining-menu.png")"
                                    alt="ItemImage" class="item-img">
                            </td>
                            <td>
                                <p class="item-name">@Model?.LeastSellingItem[i].Name</p>
                                <span class="order-count"><i class="fa-solid a-caret-down"></i>
                                    @Model?.LeastSellingItem[i].OrderCount Order</span>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <div class="icon-container icon-waiting-list">
                    <img src="@Url.Content("~/images/icons/waiting-list.svg")" alt="Waiting List Count">
                </div>
                <h3 class="card-value">12</h3>
                <p class="card-title">Waiting List Count</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="dashboard-card">
                <div class="icon-container icon-customer">
                    <img src="@Url.Content("~/images/icons/customer.svg")" alt="New Customers">
                </div>
                <h3 class="card-value">5</h3>
                <p class="card-title">New Customers</p>
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script>
<script>
setGraphSize(@Html.Raw(Json.Serialize(Model?.Revenue?.Values)),
            @Html.Raw(Json.Serialize(Model?.Revenue?.Labels))
            @Html.Raw(Json.Serialize(Model?.CustomerGrowth?.Values))
            @Html.Raw(Json.Serialize(Model?.CustomerGrowth?.Labels))
        )
</script>
