@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_Authlayout";
}

@model PizzaShop.ViewModels.ForgotPasswordViewModel;

<div class="col-md-9 justify-content-center">
    <div class="row mb-5">
        <div class="d-flex align-items-center justify-content-center p-0">
            <img src="~/images/logos/pizzashop_logo.png" alt="pizzashop_logo" id="pizzashop_logo" />
            <h1 class="text-primary">PIZZASHOP</h1>
        </div>
    </div>
    <div class="row d-flex justify-content-center align-items-center">
        <h4 class="text-center">Forgot Password</h4>
        <p class="mt-3 text-center">Enter your email and we'll send you a Link to reset your password.
        </p>
        <form asp-controller="Authentication" asp-action="ForgotPassword" class="loginForm" method="post">
            <div class="form-input-div mb-1">
                <input type="text" placeholder="Email*" class="form-control p-2" name="Email" id="email"
                    asp-for="Email" />
                <span class="form-input-icon"><i class="fa-solid fa-user" style="color: gray"></i>
                </span>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-2 mt-3">
                <button class="btn btn-primary w-100" type="submit">Send</button>
            </div>
            <div class="text-center"><a href="/">Back to login</a></div>
        </form>
    </div>
</div>

<script src="~/js/Authentication.js" asp-append-version="true"></script>