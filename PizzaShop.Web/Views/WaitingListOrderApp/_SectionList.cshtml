@model List<PizzaShop.DataAccess.ViewModels.SectionViewModel>;

<div class="nav nav-underline" id="nav-tab" role="tablist">
    <button class="nav-link active kot-tab-link pe-1" id="All-Wt" data-bs-toggle="tab" type="button" role="tab"
        aria-controls="nav-category-1" aria-selected="true">All<span class="waiting-user-count"
            id="allTokenCount"></span>
    </button>
    @if (Model.Count() > 0)
    {
        @foreach (var c in Model)
        {
            <button class="nav-link kot-tab-link pe-2 wt-section" data-bs-toggle="tab" type="button" role="tab"
                aria-controls="nav-category-2" aria-selected="false" data-id="@c.Id" data-name="@c.Name">
                @c.Name<span class="waiting-user-count">@c.waitingTokenCount</span>
            </button>
        }
    }
</div>

<script>
    $(document).ready(function () {
        var sectionList = @Html.Raw(Json.Serialize(Model));
        var count = 0;
        for (let i = 0; i < sectionList.length; i++) {
            count += sectionList[i].waitingTokenCount;
        }
        $("#allTokenCount").text(count);
    })

    $(".wt-section").click(function () {
        WtSectionId = $(this).data('id');
        GetWaitingTokens();
    })

    $("#All-Wt").click(function () {
        WtSectionId = 0;
        GetWaitingTokens();
    })
</script>